{
  "kind": "collectionType",
  "collectionName": "friends",
  "info": {
    "singularName": "friend",
    "pluralName": "friends",
    "displayName": "friend",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "friendEmail": {
      "type": "string"
    },
    "friends_status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Accepted",
        "Rejected"
      ],
      "default": "Pending",
      "required": true
    },
    "invitedAt": {
      "type": "datetime",
      "required": true
    },
    "inviteToken": {
      "type": "string",
      "unique": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "friends_sent"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "friends_receiveds"
    }
  }
}
