{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "challenge",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "challengerId": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "challenges_challenger"
    },
    "challengeeId": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "challenges_challengee"
    },
    "goal": {
      "type": "integer",
      "required": true
    },
    "challenge_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "accepted",
        "completed"
      ]
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Solo",
        "Pack",
        "PackVsPack"
      ],
      "required": true
    },
    "winner": {
      "type": "string"
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "challenge"
    }
  }
}
